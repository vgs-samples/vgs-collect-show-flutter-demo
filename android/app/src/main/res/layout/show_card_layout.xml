<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.verygoodsecurity.vgsshow.widget.VGSTextView
        android:id="@+id/vgsTvPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/show_input_border"
        android:padding="16dp"
        app:contentPath="json.payment_card_holder_name"
        app:gravity="center"
        app:hint="Card holder"
        app:hintTextColor="@android:color/black"
        app:singleLine="true" />

    <com.verygoodsecurity.vgsshow.widget.VGSTextView
        android:id="@+id/vgsTvCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/show_input_border"
        android:padding="16dp"
        app:contentPath="json.payment_card_number"
        app:gravity="center"
        app:hint="Card number"
        app:hintTextColor="@android:color/black"
        app:singleLine="true" />

    <com.verygoodsecurity.vgsshow.widget.VGSTextView
        android:id="@+id/vgsTvExpiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/show_input_border"
        android:padding="16dp"
        app:contentPath="json.payment_card_expiration_date"
        app:gravity="center"
        app:hint="Expiration date"
        app:hintTextColor="@android:color/black"
        app:singleLine="true" />
</androidx.appcompat.widget.LinearLayoutCompat>